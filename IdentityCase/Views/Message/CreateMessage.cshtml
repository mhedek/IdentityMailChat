@model IdentityCase.Entities.Message
@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/Default/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="compose-content mt-5">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control bg-transparent" asp-for="ReceiverEmail" placeholder=" Kime:">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control bg-transparent" asp-for="Subject" placeholder=" Konu">
                            </div>
                            <div class="form-group">
                                <textarea class="textarea_editor form-control bg-light" rows="15" asp-for="MessageDetail" placeholder="Mesajınızı Giriniz ..."></textarea>
                            </div>
                            <div class="text-left m-t-15">
                                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>